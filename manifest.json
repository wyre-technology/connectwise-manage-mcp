{
  "manifest_version": "0.3",
  "name": "connectwise-manage-mcp",
  "display_name": "ConnectWise Manage MCP Server",
  "version": "0.0.0",
  "description": "MCP server for ConnectWise Manage PSA - access tickets, companies, contacts, and projects through AI assistants",
  "long_description": "Provides AI assistants with structured access to your ConnectWise Manage PSA data. Manage service tickets, companies, contacts, projects, and agreements through the Model Context Protocol.",
  "author": { "name": "Wyre Technology", "url": "https://github.com/wyre-technology" },
  "repository": { "type": "git", "url": "https://github.com/wyre-technology/connectwise-manage-mcp" },
  "homepage": "https://github.com/wyre-technology/connectwise-manage-mcp",
  "license": "Apache-2.0",
  "keywords": ["connectwise", "manage", "psa", "msp", "tickets", "it-management"],
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/dist/index.js"],
      "env": { "CW_MANAGE_COMPANY_ID": "${user_config.cw_manage_company_id}", "CW_MANAGE_PUBLIC_KEY": "${user_config.cw_manage_public_key}", "CW_MANAGE_PRIVATE_KEY": "${user_config.cw_manage_private_key}", "CW_MANAGE_CLIENT_ID": "${user_config.cw_manage_client_id}", "CW_MANAGE_BASE_URL": "${user_config.cw_manage_base_url}", "MCP_TRANSPORT": "stdio" }
    }
  },
  "tools_generated": true,
  "user_config": {
    "cw_manage_company_id": { "type": "string", "title": "Company ID", "description": "Your ConnectWise Manage company ID", "sensitive": false, "required": true },
    "cw_manage_public_key": { "type": "string", "title": "Public Key", "description": "Your ConnectWise Manage API public key", "sensitive": true, "required": true },
    "cw_manage_private_key": { "type": "string", "title": "Private Key", "description": "Your ConnectWise Manage API private key", "sensitive": true, "required": true },
    "cw_manage_client_id": { "type": "string", "title": "Client ID", "description": "Your ConnectWise Manage client ID", "sensitive": true, "required": true },
    "cw_manage_base_url": { "type": "string", "title": "Base URL", "description": "Your ConnectWise Manage API base URL (e.g., na.myconnectwise.net)", "sensitive": false, "required": true }
  },
  "compatibility": { "platforms": ["darwin", "win32", "linux"], "runtimes": { "node": ">=18.0.0" }, "claude_desktop": ">=0.10.0" }
}
